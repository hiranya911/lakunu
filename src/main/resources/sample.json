{
  "build": [
    {
      "plugin": "ant",
      "target": "jar",
      "validators": [
        {
          "name": "build-success",
          "type": "success",
          "score": 5
        }
      ]
    }
  ],
  "run": [
    {
      "plugin": "run-command",
      "command": "java",
      "args": ["-jar", "build/rational.jar", "1", "2"],
      "validators": [
        {
          "name": "run-jar",
          "type": "output-match",
          "pattern": "(?s).+",
          "score": 5
        }
      ]
    }
  ],
  "test": [
    {
      "plugin": "ant",
      "target": "test",
      "validators": [
        {
          "name": "rational-test",
          "type": "ant-test",
          "score": 20,
          "scorePerTest": 1
        }
      ]
    }
  ]
}